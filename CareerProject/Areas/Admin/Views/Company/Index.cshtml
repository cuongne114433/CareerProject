
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout_Admin.cshtml";
    var session = Session["USER_SESSION"] as CareerProject.Common.UserLogin;

}

<h2>Company List</h2>
<div style="width: 200px; height: 100px; background-color: #99b64f; align-content: center">

    <h4 style="align-content:center">New Today: @ViewBag.countToday</h4>
</div>
<table id="example" class="table table-striped table-bordered" style="width: 100%; border: 1px solid white;">
    <thead>
        <tr>
            <th scope="col">Company ID</th>
            <th scope="col">Company Name</th>
            <th scope="col">Description</th>
            <th scope="col">Avatar</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Email</th>
            <th scope="col">Location</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.companies)
        {
            if (item.CreatedDate.Date.AddDays(10) >  DateTime.Now.Date)
            {
                <tr style="background-color:#99b64f">
                    <th scope="row" style="color:#ff0000">@item.ID - New</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Avt</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td>@item.Location</td>
                    <td>
                        @if (session.Role == "Admin")
                        {
                            <a href="@Url.Action("Index", "Job", new { idCompany = item.ID })" class="btn btn-light btn-round px-5"><i class="icon-pencil"></i> View Job</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Edit", "Company", new { id = item.ID })" class="btn btn-light btn-round px-5"><i class="icon-pencil"></i> Edit</a>
                            <button onclick="removeCompany(@item.ID)" class="btn btn-sm btn-danger px-5">DELETE</button>
                        }
                    </td>
                </tr>
            }
            else
            {
                <tr >
                    <th scope="row">@item.ID</th>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Avt</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td>@item.Location</td>
                    <td>
                        @if (session.Role == "Admin")
                        {
                            <a href="@Url.Action("Index", "Job", new { idCompany = item.ID })" class="btn btn-light btn-round px-5"><i class="icon-pencil"></i> View Job</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Edit", "Company", new { id = item.ID })" class="btn btn-light btn-round px-5"><i class="icon-pencil"></i> Edit</a>
                            <button onclick="removeCompany(@item.ID)" class="btn btn-sm btn-danger px-5">DELETE</button>
                        }
                    </td>
                </tr>
}
        }
    </tbody>
</table>

<script>
    function removeCompany(id) {
        if (confirm("Are you sure you want to delete the company with ID " + id + "?")) {
            $.get("/Company/Remove", { id: id }, function (data) {
                if (data) {
                    alert("Company has been deleted");
                    location.reload();
                } else {
                    alert("Error deleting company");
                }
            });
        }
    }
</script>
